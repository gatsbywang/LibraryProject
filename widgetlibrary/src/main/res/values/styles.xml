<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialogTheme" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在Activity之上-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">@null</item>
    </style>

    <style name="animation_dialog_bottom">
        <item name="android:windowEnterAnimation">@anim/dialog_animation_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_animation_out</item>
    </style>
</resources>